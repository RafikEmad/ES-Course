#include "stdio.h"

int main()
{
	int n;
	fflush(stdin);fflush(stdout);
	printf("Enter numbers of data: ");
	scanf("%d";&n);
	float a[n];
	fflush(stdin);fflush(stdout);
	printf("Enter elements of 1st matrix \n");

	for (int i=0;i<row;i++)
	{
		for (int j=0;j<col;j++)
		{
			fflush(stdin);fflush(stdout);
			printf("Enter a%d%d: ",i+1,j+1);
			fflush(stdin);fflush(stdout);
			scanf("%f",&a[i][j]);
		}
	}
	printf("Enter elements of 2nd matrix \n");

	for (int i=0;i<row;i++)
	{
		for (int j=0;j<col;j++)
		{
			fflush(stdin);fflush(stdout);
			printf("Enter b%d%d: ",i+1,j+1);
			fflush(stdin);fflush(stdout);
			scanf("%f",&b[i][j]);
		}
	}
	printf("Sum Of Matrix:\n");
	for (int i=0;i<row;i++)
	{
		for (int j=0;j<col;j++)
		{
			fflush(stdin);fflush(stdout);
			printf("%0.1f\t",a[i][j]+b[i][j]);
			fflush(stdin);fflush(stdout);
		}
		printf("\n");
	}
}
