#include "stdio.h"

int main()
{
	float sum=0;
	int n;
	fflush(stdin);fflush(stdout);
	printf("Enter numbers of data: ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&n);
	float a[n];
	fflush(stdin);fflush(stdout);

	for (int i=0;i<n;i++)
	{
		fflush(stdin);fflush(stdout);
		printf("Enter number:: ");
		fflush(stdin);fflush(stdout);
		scanf("%f",&a[i]);
		sum=sum+a[i];
	}


	printf("Average = %0.2f",sum/n);


}
