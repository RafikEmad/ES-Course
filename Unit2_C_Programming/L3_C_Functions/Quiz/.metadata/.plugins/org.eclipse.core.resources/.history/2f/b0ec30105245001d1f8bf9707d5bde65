#include "stdio.h"



int main ()
{
	int x;
	int num;

	fflush(stdin);fflush(stdout);
	printf("Input Number = ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&num);

	fflush(stdin);fflush(stdout);
	printf("Bit position = ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&x);

	fflush(stdin);fflush(stdout);
	printf("result = %d",Clearbit(num,x));

