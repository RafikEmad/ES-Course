#include "stdio.h"

int main()
{
	float a,b,c;
	printf("Enter three numbers: ");
	fflush(stdin);fflush(stdout);
	scanf("%f %f %f",&a ,&b, &c);
	if (a>b)
	{
		if (a>c)
		{
			printf("largest number %f",a);
			fflush(stdin);fflush(stdout);
		}
		else
			printf("largest number %f",c);
	}
	else
	{
		if (b>c)
		{
			printf("largest number %f",b);
			fflush(stdin);fflush(stdout);
		}
		else
			printf("largest number %f",c);
	}
	return 0;
}

